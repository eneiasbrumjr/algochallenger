Create services

docker service create --name boca-postgres --network=interna --limit-cpu=1 --limit-memory=1024MiB -e POSTGRES_PASSWORD=boca -e POSTGRES_USER=boca postgres:12


create folders storage/{sessions,views, cache}


docker service create --name boca-api --network=interna --limit-cpu=1 --limit-memory=512MiB --replicas 1 --mount type=bind,source=~/Downloads,target=/var/www/app/storage -p 8001:80 -e DB_CONNECTION=pgsql -e APP_DEBUG=true -e APP_URL=http://localhost -e DB_PORT=5432 -e DB_DATABASE=boca -e APP_NAME=Boca -e LOG_CHANNEL=daily -e DB_USERNAME=boca -e APP_ENV=local -e DB_PASSWORD=boca -e DB_HOST=db -e JWT_SECRET=UiUT2Dd8EwuiHpEFKsf93k945OTipS8uZb0gIl7PnwiVUIZv37yf5puWF0S5qHQx jvfazolo/algochallenger-backend



docker service create --name frontend --network=interna --limit-cpu=1 --limit-memory=1024MiB --replicas 1 -p 8181:80 -e VUE_APP_BACKEND_URL=http://localhost:8001/api jvfazolo/algochallenger-frontend


docker service create --name boca-jail --network=interna --limit-cpu=1 --limit-memory=512MiB --replicas 1 -e API_URL=http://backend/api -e DB_HOST=db -e DB_PORT=5432 -e DB_NAME=boca -e DB_USER=boca -e DB_PASSWORD=boca -e ADMIN_USER=admin -e ADMIN_PASSWORD=algochallenger jvfazolo/algochallenger-frontend


